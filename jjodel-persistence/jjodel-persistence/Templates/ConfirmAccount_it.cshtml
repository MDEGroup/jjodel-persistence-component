@model jjodel_persistence.Models.Mail.ConfirmAccount
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body style="font-family: Arial, sans-serif; color: #333; line-height: 1.6; margin: 0; padding: 0; background-color: #f4f4f4;">
    <div style="max-width: 600px; margin: 20px auto; background: #ffffff; padding: 20px; border-radius: 8px; box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);">
        <p style="text-align: center; margin-bottom: 20px;">
            <img src="https://www.jjodel.io/wp-content/uploads/2024/06/logo-pride.png" alt="Logo di Jjodel.io" style="max-width: 150px; height: auto;">
        </p>
        <p style="font-size: 18px; font-weight: bold; text-align: center;">
            Ciao @Model.Name @Model.Surname
        </p>
        <p style="margin: 20px 0; text-align: center;">
            Grazie per esserti registrato/a a <strong>Jjodel.io</strong>! 🎉<br>
            Per completare la registrazione e attivare il tuo account, clicca sul pulsante qui sotto:
        </p>
        <p style="text-align: center;">
            <a href="@Model.Url/#/confirm/@Model.Id/@Model.Token" role="button" aria-label="Conferma il tuo account" style="display: inline-block; background-color: #007bff; color: white; padding: 12px 20px; text-decoration: none; font-size: 16px; border-radius: 5px; font-weight: bold; margin-top: 20px;">Conferma il tuo account</a>
        </p>
        <p style="margin: 20px 0; text-align: center;">
            Se non hai creato questo account, puoi ignorare questa email in sicurezza.
        </p>
        <p style="margin-top: 30px; text-align: center; font-size: 14px; color: #666;">
            Un saluto,<br>
            <strong>Il team di Jjodel</strong> 🚀
        </p>
    </div>
   
</body>
