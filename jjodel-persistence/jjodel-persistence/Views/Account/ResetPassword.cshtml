@{
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}
@model jjodel_persistence.Models.Dto.ResetPasswordRequest

<div class="container d-flex justify-content-center align-items-center" style=" margin: auto 5px;">
    <div class="card p-4 p-md-5 shadow w-50">
        <h3 class="text-center mb-4">Reset Password</h3>

        @using (Html.BeginForm("ResetPassword", "/Account", FormMethod.Post)) {
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label asp-for="Nickname" class="form-label"></label>
                <input asp-for="Nickname" class="form-control">
                <span asp-validation-for="Nickname" class="text-danger"></span>
            </div>

            <div class="btn-toolbar" role="toolbar" >
                <div class="btn-group mr-2" role="group" aria-label="First group">
                    <a href="/Account/Login" class="text-decoration-none">Indietro</a>
                </div>

                <div class="btn-group w-auto ms-auto" role="group">
                    <button type="submit" class="btn btn-primary w-100">Reset</button>
                </div>
            </div>
        }
    </div>
</div>
